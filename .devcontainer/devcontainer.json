{
  "name": "YOLO Project Development Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TIMEZONE": "${localEnv:TZ:Asia/Taipei}",
      "CLAUDE_CODE_VERSION": "latest",
      "NODE_VERSION": "20"
    }
  },
  "capAdd": [
    "NET_ADMIN",
    "NET_RAW"
  ],
  "runArgs": [
    "--network=host"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        // Claude Code
        "anthropic.claude-code",

        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.flake8",
        "ms-python.mypy-type-checker",

        // Testing
        "littlefoxteam.vscode-python-test-adapter",

        // Git
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "mhutchie.git-graph",

        // YAML (for configs)
        "redhat.vscode-yaml",

        // Markdown
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",

        // Docker
        "ms-azuretools.vscode-docker",

        // REST Client (for API testing)
        "humao.rest-client",

        // Error Lens (better error display)
        "usernamehw.errorlens",

        // Jupyter (for notebooks)
        "ms-toolsai.jupyter",

        // Better Comments
        "aaron-bond.better-comments"
      ],
      "settings": {
        // Python settings
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "none",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.linting.pylintEnabled": false,
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,

        // Black formatter
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },

        // Black configuration
        "black-formatter.args": [
          "--line-length=100"
        ],

        // isort configuration
        "isort.args": [
          "--profile",
          "black",
          "--line-length",
          "100"
        ],

        // Flake8 configuration
        "flake8.args": [
          "--max-line-length=100",
          "--extend-ignore=E203,W503"
        ],

        // Editor settings
        "editor.rulers": [100],
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.trimAutoWhitespace": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,

        // Terminal settings
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          },
          "bash": {
            "path": "/bin/bash"
          }
        },

        // Git settings
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true,

        // File associations
        "files.associations": {
          "*.yaml": "yaml",
          "*.yml": "yaml",
          ".claude/**/*": "markdown",
          "Dockerfile*": "dockerfile"
        },

        // File exclusions
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/*.pyo": true,
          "**/.pytest_cache": true,
          "**/.mypy_cache": true,
          "**/.DS_Store": true,
          "**/runs": true,
          "**/dataset": true
        },

        // Search exclusions
        "search.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/runs": true,
          "**/dataset": true,
          "**/.git": true
        },

        // YAML validation
        "yaml.schemas": {
          "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml",
          "https://json.schemastore.org/github-issue-forms.json": ".github/ISSUE_TEMPLATE/*.yml"
        },

        // Docker
        "docker.showStartPage": false
      }
    }
  },
  "mounts": [
    "source=yolo-bashhistory,target=/commandhistory,type=volume",
    "source=yolo-claude-config,target=/home/yolo/.claude,type=volume",
    "source=yolo-pip-cache,target=/home/yolo/.cache/pip,type=volume"
  ],
  "remoteUser": "yolo",
  "containerEnv": {
    "PYTHONUNBUFFERED": "1",
    "PIP_NO_CACHE_DIR": "1",
    "PYTHONDONTWRITEBYTECODE": "1"
  },
  "initializeCommand": "echo 'Initializing YOLO development container...'",
  "postCreateCommand": "pip install --user -r requirements.txt 2>/dev/null || echo 'requirements.txt not found, skipping package installation'",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand",
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [
    8000,
    8888
  ],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "8888": {
      "label": "Jupyter",
      "onAutoForward": "silent"
    }
  }
}
